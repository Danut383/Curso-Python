def main():
  print("")
  num=0
  tot=0.0
  while True:
    sval=input("ingresa un numero: ")
    if sval=='done':
      break
    try:
      fval=float(sval)
    except:
      print("invalid input")
      continue
    print(fval)
    num=num+1
    tot=tot+fval
  print("todo hecho")
  print(tot,num,tot/num)
if __name__=="__main__":
  main()
